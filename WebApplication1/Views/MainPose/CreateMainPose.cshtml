@{
}
@using WebApplication1.ViewModels
@model CreateMainPoseViewModel
<div class="container">
    <form method="post" asp-action="CreateMainPose" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6 form-group row">
                <label class="col-1 col-form-label" asp-for="FirstName">ชื่อ</label>
                <div class="col-8">
                    <input asp-for="FirstName" class="form-control" placeholder="Enter FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-6 form-group row">
                <label class="col-2 col-form-label" asp-for="LastName">นามสกุล</label>
                <div class="col-8">
                    <input asp-for="LastName" class="form-control" placeholder="Enter LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label asp-for="Phone">เบอร์โทรศัพท์</label>
                <input asp-for="Phone" type="text" class="form-control" placeholder="Enter Phone" maxlength="10">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-2 form-group">
                <label asp-for="MaxComment">จำนวนรับฝาก</label>
                <select asp-for="MaxComment" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>

            </div>
            <div class="col-6 form-group">
                <label asp-for="Place">ไปซื่อที่</label>
                <input asp-for="Place" class="form-control" placeholder="Enter Place">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>

        </div>
        <div class="row">

            <div class="col-3 form-group">
                <label asp-for="Image">ช่องทางการชำระเงิน</label>
                <label asp-for="Account">หมายเลขบัญชี</label>
                <input asp-for="Account" type="text" class="form-control" placeholder="Enter Image">
                <label asp-for="Image">QR code</label>
                <input asp-for="Image" type="file" class="form-control" placeholder="Enter Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
