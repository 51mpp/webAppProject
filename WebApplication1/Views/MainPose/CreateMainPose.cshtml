@{
    ViewData["Title"] = "โพสต์รับฝาก";
}


@using WebApplication1.Data.Enum

@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@using System.Globalization;

@using WebApplication1.ViewModels
@model CreateMainPoseViewModel

<link rel="stylesheet" href="~/css/fillInfo.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai:wght@500&display=swap" rel="stylesheet">
<div class="container" id="box">
    <h2>กรอกข้อมูลการรับฝาก</h2>
    <form method="post" asp-action="CreateMainPose" enctype="multipart/form-data">
        <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
        <input type="hidden" id="Email" name="Email" asp-for="Email" value="@User.Identity.Name" />
        <div class="row">
            <div class="col-md-6 col-sm-12 form-group">
                <label asp-for="FirstName">ชื่อ</label>
                <div class="col-12">
                    <input asp-for="FirstName" value="@Model.FirstName" class="form-control" placeholder="*กรอกชื่อ">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6 col-sm-12 form-group">
                <label asp-for="LastName">นามสกุล</label>
                <div class="col-12">
                    <input asp-for="LastName" value="@Model.LastName" class="form-control" placeholder="*กรอกนามสกุล">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-6 form-group">
                <label asp-for="Phone">เบอร์โทรศัพท์</label>
                <input asp-for="Phone" type="text" value="@Model.Phone" class="form-control"
                    placeholder="*กรอกเบอร์โทรศัพท์" maxlength="10">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-xl-6  col-md-6 form-group">
                <label asp-for="Account">หมายเลขบัญชี</label>
                <input asp-for="Account" value="@Model.Account" type="text" class="form-control"
                    placeholder="กรอกหมายเลขบัญชี">
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-md-12 form-group">
                <label asp-for="Place">ไปซื่อที่</label>
                <input asp-for="Place" class="form-control"
                    placeholder="*จะไปซื้อที่ไหน Ex: โรงพระเทพ ร้านอาหารตามสั่ง">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class=" col-xl-4 col-md-4 col-sm-12 form-group">
                <label asp-for="MaxTimePose">จะไปซื้อในอีก (นาที)</label>
                <input asp-for="MaxTimePose" class="form-control" value="0" min="0">
            </div>
            <div class=" col-xl-4 col-md-5 col-sm-12 form-group">
                <label asp-for="MaxComment">จำนวนรับฝาก (เริ่มต้นที่ 1 คน)</label>
                <input asp-for="MaxComment" class="form-control" value="1" min="1">
            </div>
        </div>
        <div class="row">
            <div class=" col-xl-4 col-md-6 col-sm-12 form-group">
                <label asp-for="Image">QR code</label>
                <input asp-for="Image" type="file" class="form-control" placeholder="เลือกไฟล์">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <br>
        <a class="btn btn-secondary" href="/MainPose">ยกเลิก</a>
        <button type="submit" class="btn btn-primary">ยืนยัน</button>

    </form>
</div>
