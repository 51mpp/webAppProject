@using WebApplication1.ViewModels
@model CreateMainPoseViewModel

<link rel="stylesheet" href="~/css/createMainPost.css">
<div class="container">
    <form method="post" asp-action="CreateMainPose" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 col-sm-12 form-group">
                <label asp-for="FirstName">ชื่อ</label>
                <div class="col-12">
                    <input asp-for="FirstName" class="form-control" placeholder="*กรอกชื่อ">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6 col-sm-12 form-group">
                <label asp-for="LastName">นามสกุล</label>
                <div class="col-12">
                    <input asp-for="LastName" class="form-control" placeholder="*กรอกนามสกุล">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-4 form-group">
                <label asp-for="Phone">เบอร์โทรศัพท์</label>
                <input asp-for="Phone" type="text" class="form-control" placeholder="*กรอกเบอร์โทรศัพท์" maxlength="10">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-xl-2  col-md-3 form-group">
                <label asp-for="MaxComment">จำนวนรับฝาก (เริ่มต้นที่ 1 คน)</label>
                <input asp-for="MaxComment" class="form-control" value="1" min="1">

            </div>
            <div class="col-xl-6 col-md-8 form-group">
                <label asp-for="Place">ไปซื่อที่</label>
                <input asp-for="Place" class="form-control" placeholder="จะไปซื้อที่ไหน Ex: โรงพระเทพ ร้านอาหารตามสั่ง">
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>

        </div>

        <div class="row">
            <div class=" col-xl-3 col-md-6 col-sm-12 form-group">
                <label asp-for="Account">หมายเลขบัญชี</label>
                <input asp-for="Account" type="text" class="form-control" placeholder="กรอกหมายเลขบัญชี">
                <label asp-for="Image">QR code</label>
                <input asp-for="Image" type="file" class="form-control" placeholder="เลือกไฟล์">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <a class="btn btn-secondary" href="/MainPose">ยกเลิก</a>
        <button type="submit" class="btn btn-primary">ยืนยัน</button>

    </form>
</div>
