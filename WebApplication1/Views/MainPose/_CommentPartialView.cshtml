@{
}
@model (IEnumerable<Comment>,int)
@foreach (var comment in Model.Item1.Take(Model.Item2))
{    
    <div class="row">

        <div class="order_box">
            <div class="card p-3 shadow-sm">
                <form asp-controller="MainPose" asp-action="DeleteComment" method="post"
                    class="position-absolute top-0 end-0 p-1">
                    <input type="hidden" name="commentId" value="@comment.Id" />
                    <button type="submit" class="remove">
                        <img src="https://cdn-icons-png.flaticon.com/512/189/189690.png" alt="">
                    </button>
                </form>
                <div class="row p-2">
                    <div class="col-3">
                        <small style="color: rgb(76, 158, 80);font-size: 16px;">@comment.FirstName
                            :</small>
                    </div>
                    <div class="col-9">
                        <small style="font-size: 16px" class="font-weight-bold">@comment.CommentText</small>
                    </div>
                </div>
                <div class="row">
                    <div id="Image-@comment.Id-comment" class="col-12">
                        <img class="slip" src="@comment.Image" alt="">
                    </div>
                </div>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.Identity.Name == comment.Email))
        {
            <form asp-controller="MainPose" asp-action="DeleteComment" method="post">
                <input type="hidden" name="commentId" value="@comment.Id" />
                <button type="submit" class="remove">
                    <img src="https://cdn-icons-png.flaticon.com/512/189/189690.png" alt="">
                </button>
            </form>
        }
        
    </div>

}
<script src="~/js/post.js"></script>