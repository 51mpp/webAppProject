@{
}
@model (IEnumerable<Comment>,int,int,MainPose)

@foreach (var comment in Model.Item1.Take(Model.Item2))
{    
    <div class="row">
        <div class="order_box">
            <div class="card p-3 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center">
                        <div class="row">
                            <div class="col-3">
                                <small style="color: rgb(76, 158, 80);">@comment.FirstName</small>
                            </div>
                            <div class="col-9">
                                <small class="font-weight-bold">@comment.CommentText</small>
                            </div>
                            <div></div>
                            <div class="slip col-8">
                                <img id="Image-@comment.Id-comment" src="@comment.Image" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (comment.Like == true)
        {
            <img src="https://cdn.discordapp.com/attachments/880751147449733150/1101569968333656125/pngwing.com.png" alt="">
        }
        @if (comment.Like == true && (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.Identity.Name == comment.Email)))
        {
            <form asp-controller="MainPose" asp-action="CreateComment" method="post"
                enctype="multipart/form-data">
                <input type="hidden" name="mainPoseId" value="@Model.Item4" />
                <input type="hidden" name="email" value="@User.Identity.Name" />
                <input type="hidden" name="confirm" value="true" />
                <input type="hidden" id="first-name" name="FirstName" value="@comment.FirstName" />
                <input type="hidden" id="last-name" name="LastName" value=@comment.LastName/>
                <input type="hidden" id="comment-text" name="CommentText" value=@comment.CommentText/>
                <input type="hidden" name="commentId" value="@comment.Id" />
                <div class="form-group">
                    <label for="Image2">หลักฐานการชำระเงิน</label>
                    <input id="Image2" name="image2" type="file" class="form-control"
                        placeholder="เลือกไฟล์">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        }
        @if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.Identity.Name == Model.Item4.Email))
        {
            <button id="confirm-@comment.Id-comments" onclick="confirmComment('@comment.Id','@comment.CommentText','@comment.FirstName','@comment.LastName','@comment.Email',true,@Model.Item3)">Confirm Comment</button>
        }
        
        @if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.Identity.Name == comment.Email))
        {
            <form asp-controller="MainPose" asp-action="DeleteComment" method="post">
                <input type="hidden" name="commentId" value="@comment.Id" />
                <button type="submit" class="remove">
                    <img src="https://cdn-icons-png.flaticon.com/512/189/189690.png" alt="">
                </button>
            </form>
        }
    </div>
    <script>
        function confirmComment(commentId, CommentText, FirstName, LastName, email, confirm, mainPoseId) {
            $.ajax({
                url: '@Url.Action("ConfirmComment", "MainPose")',
                data: { commentId: commentId, CommentText: CommentText, FirstName: FirstName, LastName: LastName, email: email, confirm: confirm, mainPoseId: mainPoseId },
                type: 'POST',
                success: function (result) {
                    console.log(result);
                    // Do something with the result, if needed
                },
                error: function () {
                    console.log('Error occurred while confirming comment.');
                }
            });
        }
    </script>
}