@{
    ViewData["Title"] = "โพสต์ฝาก";
}
<div class="box container h-200 d-flex align-items-center justify-content-center">
    <form>
        <div class="row">
            <div class="col-md-6 col-sm-12 form-group">
                <label >ชื่อ</label>
                <div class="col-12">
                    <input  class="form-control" placeholder="*กรอกชื่อ">
                    <span  class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6 col-sm-12 form-group">
                <label>นามสกุล</label>
                <div class="col-12">
                    <input class="form-control" placeholder="*กรอกนามสกุล">
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-4 form-group">
                <label >เบอร์โทรศัพท์</label>
                <input  type="text" class="form-control" placeholder="*กรอกเบอร์โทรศัพท์" maxlength="10">
                <span class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-6 col-md-12 form-group">
                <label >ไปซื้อที่ไหน</label>
                <input  class="form-control"
                    placeholder="*จะไปซื้อที่ไหน Ex: โรงพระเทพ ร้านอาหารตามสั่ง">
                <span  class="text-danger"></span>
            </div>
            <div class="col-xl-6 col-md-12 form-group">
                <label >ไปซื้ออะไร</label>
                <input  class="form-control"
                    placeholder="*จะไปซื้อที่ไหน Ex: โรงพระเทพ ร้านอาหารตามสั่ง">
                <span  class="text-danger"></span>
            </div>
            <div class="col-xl-6 col-md-12 form-group">
                <label >เอามาส่งที่ไหน</label>
                <input  class="form-control"
                    placeholder="*จะไปซื้อที่ไหน Ex: โรงพระเทพ ร้านอาหารตามสั่ง">
                <span  class="text-danger"></span>
            </div>
            <div class=" col-xl-5 col-md-4 col-sm-12 form-group">
                <div class="row">
                    <div class="col-6">
                        <label>เอามาส่งเวลา</label>
                        <input class="form-control" value="1" min="1">
                        <label>ถึง</label>
                    </div>
                    <div class="col-6">
                        
                    </div>
                </div>
                
                
            </div>
        </div>
        <a class="btn btn-secondary" href="/MainPose">ยกเลิก</a>
        <button type="submit" class="btn btn-primary">ยืนยัน</button>

    </form>
</div>
