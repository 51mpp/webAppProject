@* <section class="sec1 border"> *@

<div>
    <section id="bg-img" class="banner-image d-flex justify-content-center align-items-center vh-100">
        <div class="centent text-center" id="welcome">
            <h1 id="WC" class="">ยินดีต้อนรับเข้าสู่เว็บไซต์</h1>
            <h1 class="second-text">พร้อมฝาก</h1>
        </div>
