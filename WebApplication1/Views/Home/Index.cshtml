    @* </section> *@
    <section class="home" id="section2">
        <div class="row justify-content-center align-item-center">
            <div class="home-text col-xl-6 col-md-12 col-sm-12">
                <h1>บริการ รับ/ฝาก ซื้ออาหาร</h1>
                <h2>หิวเมื่อไหร่ก็แวะมา <br> มีคนรอ รับ/ฝาก อยู่ตลอด</h2>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="./Account/Login" class="btn">ลงชื่อเข้าใช้</a>
                }
            </div>
            <img class="home-img col-xl-6 col-md-12 col-sm-12"
